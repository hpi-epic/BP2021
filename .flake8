[flake8]
# E203: whitespace before ':' (avoid clashes with black formatting)
# E501: Line too long good bye
# W503: Line break occurred before a binary operator
# W191: Indentation contains tabs
ignore = W503,E203,E501,W605,W191

# F401: module imported but unused
# E402: module level import not at top of file (sys.path append needs to happen first)
per-file-ignores =
    src/tests/context.py:F401, E402